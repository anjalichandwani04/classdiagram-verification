@startuml
class Scene {
    +sceneCode: String
    +description: String
    +sceneType: String
    +addSetup(setup: Setup): void
    +getSetups(): List<Setup>
}

class Setup {
    +setupCode: String
    +description: String
    +aperture: String
    +exposure: String
    +focalLength: String
    +filters: String
    +addTake(take: Take): void
    +getTakes(): List<Take>
}

class Take {
    +takeNumber: Integer
    +filmUsed: Float
    +reelCode: String
    +getDetails(): String
}

class Location {
    +locationCode: String
    +address: String
    +description: String
    +getDetails(): String
}

Scene "1" -- "*" Setup
Setup "1" -- "*" Take
Scene "0..1" -- "1" Location
@enduml
