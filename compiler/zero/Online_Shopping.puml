    +customerId: String
    +name: String
    +email: String
    +register()
    +updateProfile()
}

class Account {
    +accountId: String
    +createOrder()
    +getOrders()
}

class WebUser {
    +loginName: String
    +state: String
    +login()
    +logout()
}

class ShoppingCart {
    +cartId: String
    +addItem(product: Product, quantity: int)
    +removeItem(product: Product)
    +checkout()
}

class Order {
    +orderId: String
    +orderStatus: String
    +addPayment(payment: Payment)
    +getOrderDetails()
}

class Payment {
    +paymentId: String
    +amount: Decimal
    +paymentDate: Date
    +processPayment()
}

class LineItem {
    +lineItemId: String
    +quantity: int
    +getTotalPrice()
}

class Product {
    +productId: String
    +name: String
    +price: Decimal
    +getProductDetails()
}

